    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            Init();           
            SetDefault();
            BindEvent();           

        });
        function BindEvent() {
            $("#btn_save").bind("click", Save);
            $("#btn_signIn").bind("click", Save);
            $(".mod_category_item a").bind("click",SelectProductType);
        }

        $.GetSelectProductKey = function () {          
            var a = $(".mod_category_item li").filter(".selected").children();
            var keycode = a.attr("keycode");           
            return keycode;
        }
        $.SetSelectProductKey = function (keyValue) {            
          var a= $(".mod_category_item li a").filter(function (index) {
                return $(this).attr("keycode") ==keyValue;
           });
            a.parent().addClass("selected");
            a.parent().siblings().removeClass();
        }

        function CheckLisencePoint() {
            var LisencePoint = $("#LisencePoint").val();
            if (LisencePoint == "") {
                $("#SpanLisencePointMsg").html("<font color='red'>授权点数不能为空！</font>");
                return false;
            }
            return true;
        }
        function CheckDateTime() {
            var EffectiveDate = $("#EffectiveDate").val();
            var ExpiryDate = $("#ExpiryDate").val();
            if (EffectiveDate && ExpiryDate) {
                if (EffectiveDate>ExpiryDate) {
                    $("#SpanExpiryDateMsg").html("<font color='red'>失效日期不能大于等于有效开始日期！</font>");
                    return false; 
                }
            }
            return true;
       }
       function Check() {
           if (CheckLisencePoint() == false) return false;
           if (CheckDateTime() == false) return false;
            return true;
        }

        function SelectProductType() {
            var a = $(this);
            a.parent().addClass("selected");
            a.parent().siblings().removeClass();
        }

        function Save() {
            //检查
            if (Check() == false) return;
            var AccountId = $("#AccountId").val();
            var Id = $("#Id").val() ;
            var ProductKind = $.GetSelectProductKey(); //$("#ProductKind").val();
            var OrderNumber = $("#OrderNumber").val();
            var CreateDate = $("#CreateDate").val();
            var Creator = $("#Creator").val();
            var EffectiveDate = $("#EffectiveDate").val();
            //var EffectiveYear = $("#EffectiveYear").val();
            var ExpiryDate = $("#ExpiryDate").val();          
            var isStop = $("#Stoped").attr("checked");
            var Stoped = (isStop == "checked" || isStop == "true") ? true : false;
            var data = { Id: Id,AccountId:AccountId, ProductKind: ProductKind, OrderNumber: OrderNumber, CreateDate: CreateDate, Creator: Creator, EffectiveDate: EffectiveDate,ExpiryDate: ExpiryDate, Stoped: Stoped };
            $.ajax({
                url: "/Lisence/Save",
                data: data,
                //dataType: "JSON",
                type: "POST",
                success: function (data) {
                    if (data != null) {
                        if (data.result == 0) {
                            layer.msg("操作成功！");
                            CloseBack();
                        }
                        else {
                            //msg alert
                            layer.msg("保存失败！");
                        }
                    }
                    else {
                        layer.msg("保存失败！");
                    }
                }

            });
        }
        function SetDefault() {
            var keyValue = $("#ProductKind").val();
            $.SetSelectProductKey(keyValue);
        }
        function Init() {
            $('#EffectiveDate').datetimepicker({
                format: 'yyyy-mm-dd',
                language: 'zh-CN',
                weekStart: 1,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0
            });

            $('#ExpiryDate').datetimepicker({
                format: 'yyyy-mm-dd',
                language: 'zh-CN',
                weekStart: 1,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0
            });
        }
        function CloseBack() {
            var urlaccount = '/Lisence/Grid';
            window.parent.ControlIFrame(urlaccount);

        }

        function CheckNameData(Name) {
            if (Name == "" || Name == undefined) {
                ClearMsgImage("imgNameMsg");
                $("#SpanNameMsg").html("<font color='red'>公司名称不能为空！</font>");
                return false;
            }
            else {
                var nameLen = Name.length;
                if (nameLen > 50) {
                    ClearMsgImage("imgNameMsg");
                    $("#SpanNameMsg").html("<font color='red'>公司名称字符长度不能大于50！</font>");
                    return false;
                }
                else {
                    $("#SpanNameMsg").html("");
                }
            }
            return true;
        }

      
    </script>

